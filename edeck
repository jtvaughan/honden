usage() {
  echo "Usage: `basename $0` [-h] deck-name-no-extension"
}

if [ $# -ne 1 ]; then
  usage >&2
  exit 1
elif [ "$1" = "-h" ]; then
  usage
  exit 0
fi

leafpad decks/$1.txt

